{% extends 'base.html.twig' %}

{% block title %}Détail du produit :{{produits.name}}{% endblock %}

{% block body %}









    <main class="container">
     <div class="col-12">
        <h1>Détail produit! {{produits.name}}✅</h1>
        </div>
        <section class="row d-flex">
       
        <div class="col-6">
   
<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">


<div class="carousel-indicators">
{% for iteration in 1..tabImages | length  %}
  <button type="button" data-bs-target="#carouselExampleControls" data-bs-slide-to="{{iteration -1}}" class="{{(loop.index0 == 0) ? 'active aria-current="true" ':''}}" aria-label="{{iteration -1}}"></button>
{% endfor %}
    
   
  </div>
  <div class="carousel-inner">

  {% for image in produits.images %}
  
  
 
   <div class="carousel-item {{ (loop.index0 == 0) ? 'active':''}}">
      <img class="d-block w-100 " src="{{ asset('assets/uploads/products/mini/300x300-') ~ image.name}}" alt="{{produits.name}}">
    </div>

  
 
   
    
{% endfor %}
   
  </div>
  <button class="carousel-control-prev" data-bs-target="#carouselExampleControls" type="button" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </button>
  <button class="carousel-control-next" data-bs-target="#carouselExampleControls" type="button" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </button>
</div>

        </div>

         <div class="col-6">
         <p>{{produits.id}}</p>
         <p>Description: {{produits.description}}</p>
         <p>Catégorie: {{produits.categories.name}}</p>
         <p>Prix: {{produits.price / 100}} euros</p>
         {% if produits.stock > 0 %}
         <a href="{{path('cart_add',{id: produits.id})}}" class="btn btn-success">Ajoutez au panier</a>
         {% else %}
          <p class="text-danger">Temporairement en rupture de stock</p>
         {% endif %}
         




        </div>
        </section>
        </main>








   
        
{% endblock %}
