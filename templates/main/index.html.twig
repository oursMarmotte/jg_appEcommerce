{% extends 'base.html.twig' %}



{% block body %}
<main class="container">


<section class="row d-flex justify-content-center" >


<div class="col 12">
<h1>Boutique Jetrouvetout.com</h1>
<p>Bienvenue dans notre boutique</p>

</div>

{% for item in categories %}

{% if item.parent == null %}
<div class=" card col-12 mb-10" style="background-color:black;color:white">
   <h2>{{item.name}}</h2>
   </div>
{% else %}
<div class="col-3">

<div class="card h-150 mt-5 mb-5" style="width: 18rem;">
{% if item.parent.name =="Informatique" %}
  <img class="card-img-top" src="{{asset('assets/images/laptop.png')}}" alt="informatique">
  {% else %}
      <img class="card-img-top" src="{{asset('assets/images/mode.png')}}" alt="mode">
  {% endif %}
 
  <div class="card-body">
    <h3 class="card-title">{{item.name}}</h3>
   
    <a href="{{path('categories_list',{slug:item.slug})}}" class="btn btn-primary">Voir les produits</a>
  </div>
  </div>



</div>

    
{% endif %}
 
    
{% endfor %}


</section>


</main>


{% endblock %}
