{% extends "base.html.twig" %}

{% block title %}
  Liste des Categories  
{% endblock %}

{% block body %}
    <div class="container">
    <div class="row">
    {% include '_partials/adminnav.html.twig' %}
    <main class="col-9 border boder-light bg-light p-3">
    <h1>Liste des categories</h1>
    <table class="table">
    <thead>
    <tr>
    <th>ID</th>
    <th>Nom</th>
    <th>Parent</th>
    <th>Slug</th>
    <th>Ordre</th>
    </tr>
    </thead>
    <tbody>
    {% for categorie in categories %}
    <tr>
    <td>{{categorie.id}}</td>
    <td>{{categorie.name}}</td>
    <td>
{% if categorie.parent is not null %}
 {{categorie.parent.name}}
{% endif %}
</td>
   


    <td>{{categorie.slug}}</td>
    <td>{{categorie.categoryOrder}}</td>

    </tr>
        
    {% endfor %}
    </tbody>
    </table>
    </main>
    </div>
    </div>
{% endblock %}